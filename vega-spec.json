{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 550,
  "title": "Per Capita Electricity Generation",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "./ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME_EN",
          "from": {
            "data": {
              "url": "./per-capita-electricity-generation.csv"
            },
            "key": "Entity",
            "fields": ["Per capita electricity (kWh)"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "Per capita electricity (kWh)",
          "type": "quantitative",
          "title": "Per capita electricity (kWh)",
          "scale": {
            "type": "threshold",
            "domain": [1000, 2000, 3000, 4000, 5000, 6000, 7000, 8000]
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Per capita electricity (kWh)",
            "type": "quantitative",
            "title": "Per capita electricity (kWh)"
          }
        ]
      }
    },
    {
      "data": {
        "url": "./ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    }
  ],
  "config": {
    "legend": {
      "orient": "bottom-right",
      "gradientDirection": "horizontal",
      "gradientStrokeColor": "white",
      "gradientStrokeWidth": 0.5
    }
  }
}
