{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "params": [
    {
      "name": "Death_Rate_Filter",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 30,
        "step": 5,
        "name": "Death Rate:  "
      }
    }
  ],
  "vconcat": [
    {
      "title": "Per Capita Electricity Generation (2021)",
      "width": 1000,
      "height": 550,
      "projection": {"type": "equalEarth"},
      "layer": [
        {
          "data": {
            "url": "./ne_110m.json",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "transform": [
            {
              "lookup": "properties.NAME_EN",
              "from": {
                "data": {
                  "url": "./per-capita-electricity-generation.csv"
                },
                "key": "Entity",
                "fields": ["perCapitaElectricity", "Year"]
              }
            }
          ],
          "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
          "encoding": {
            "color": {
              "field": "perCapitaElectricity",
              "type": "quantitative",
              "title": "Per capita electricity (kWh)",
              "scale": {
                "type": "threshold",
                "domain": [1000, 2000, 3000, 4000, 5000, 6000, 7000, 8000]
              }
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "Year",
                "type": "ordinal",
                "title": "Year"
              },
              {
                "field": "perCapitaElectricity",
                "type": "quantitative",
                "title": "Per capita electricity (kWh)"
              }
            ]
          }
        },
        {
          "data": {
            "url": "./ne_110m.json",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        }
      ]
    },
    {
      "title": "Death Rate per Unit of Electricity Production (2021)",
      "width": 1000,
      "height": 550,
      "data": {
        "url": "./death-rates-from-energy-production-per-twh.csv"
      },
      "layer": [
        {"mark": {"type": "bar"}
      },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": 3
          },
          "encoding": {
            "text": {"field": "DeathRate", "type": "quantitative"}
          }
        }
      ],
      "transform": [
        {"filter": {"not": {"field": "DeathRate", "equal": ""}}},
        {"filter": "datum.DeathRate > Death_Rate_Filter"}
      ],
      "encoding": {
        "y": {
          "field": "Entity",
          "type": "nominal",
          "title": "Energy Type",
          "sort": "DeathRate"
        },
        "x": {
          "field": "DeathRate", 
          "type": "quantitative",
          "scale": {"domain": [0, 35]},
          "axis": null
        },
        "color": {
          "field": "Entity",
          "type": "nominal",
          "title": "Energy Type",
          "scale": {"scheme": "category10"}
        },
        "tooltip": [
          {
            "field": "Entity", 
            "type": "nominal", 
            "title": "Energy Type "
          },
          {
            "field": "DeathRate",
            "type": "quantitative",
            "title": "Death Rate "
          }
        ]
      }
    }
  ]
}
