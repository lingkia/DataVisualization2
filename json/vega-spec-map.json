{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#0E7F6C",
  "width": "container",
  "height": "container",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "./json/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME_EN",
          "from": {
            "data": {
              "url": "./data/per-capita-electricity-generation.csv"
            },
            "key": "Entity",
            "fields": ["perCapitaElectricity", "Year"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "perCapitaElectricity",
          "type": "quantitative",
          "title": "Per capita electricity (kWh)",
          "scale": {
            "type": "threshold",
            "domain": [1000, 2000, 3000, 4000, 5000, 6000, 7000, 8000],
            "scheme": "tealblues"
          },
          "legend":{
            "labelColor":"white",
            "titleColor":"white",
            "labelFont": "poppins",
            "titleFont": "poppins"
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Year",
            "type": "ordinal",
            "title": "Year"
          },
          {
            "field": "perCapitaElectricity",
            "type": "quantitative",
            "title": "Per capita electricity (kWh)"
          }
        ]
      }
    },
    {
      "data": {
        "url": "./json/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    }
  ],
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }

}
